@model BookModel

<div class="ui center aligned container" style=" margin-top:40px;">
    <div class="ui inverted segment">
        <form class="ui inverted form" asp-action="Create" method="post">

            <div class="two fields">
                <div class="field">
                    <label asp-for="Author">Author</label>
                    <input asp-for="Author" placeholder="Author Name">
                </div>
                <div class="field">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" placeholder="Book Title">
                </div>
            </div>

            <div class="field">
                <label asp-for="Cover">Cover</label>
                <input asp-for="Cover" placeholder="Image URL">
            </div>

            <button class="ui submit button" type="submit">ADD</button>
        </form>
        </div>
</div>
